{
  "compilerOptions": {
    "outDir": "esm",
    "target": "ES2015",
    "lib": [
      "es2015"
    ],
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "alwaysStrict": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": false,
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typedocOptions": {
    "entryPoints": ["./src"],
    "out": "docs"
  }
}
